<Window x:Class="RoseLimiter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoseLimiter"
        mc:Ignorable="d" Closing="MainWindow_Closing"
        Title="RoseLimiter - Rose Cyber Security" Height="600" Width="1000"
        Icon="logo.png"
        Background="#FF2D2D30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sol Bölüm: Uygulama Listesi -->
        <Border Grid.Column="0" BorderBrush="#FF444444" BorderThickness="0,0,1,0">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Background="#FF3E3E42" Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="110"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Program" Foreground="White" FontWeight="SemiBold" Padding="8,6" FontSize="13"/>
                    <TextBlock Grid.Column="1" Text="İND Oranı" Foreground="White" FontWeight="SemiBold" Padding="8,6" FontSize="13"/>
                    <TextBlock Grid.Column="2" Text="YÜK Oranı" Foreground="White" FontWeight="SemiBold" Padding="8,6" FontSize="13"/>
                    <TextBlock Grid.Column="3" Text="İşlem" Foreground="White" FontWeight="SemiBold" Padding="8,6" FontSize="13"/>
                </Grid>
                <TreeView Name="AppTreeView" Background="#FF1E1E1E" Foreground="White" BorderThickness="0">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Background" Value="#FF2D2D30"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="IsExpanded" Value="False"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3E3E42"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type local:AppGroup}" ItemsSource="{Binding Children}">
                            <Grid Width="630" Height="26">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="110"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="4,2">
                                    <Image Source="{Binding Icon}" Width="18" Height="18" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding DownloadSpeed}" Padding="4,2" FontSize="13" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{Binding UploadSpeed}" Padding="4,2" FontSize="13" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button Content="{Binding DownloadBlockIcon}" 
                                            Click="BlockDownloadButton_Click" Tag="{Binding}"
                                            BorderThickness="1" BorderBrush="#FF555555"
                                            Padding="6,2" FontSize="14" Width="32" Height="24"
                                            Margin="2,0" Cursor="Hand" ToolTip="Gelen Paketleri Engelle">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FF3E3E42"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDownloadBlocked}" Value="True">
                                                        <Setter Property="Background" Value="#FFDC3545"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF555555"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="{Binding UploadBlockIcon}" 
                                            Click="BlockUploadButton_Click" Tag="{Binding}"
                                            BorderThickness="1" BorderBrush="#FF555555"
                                            Padding="6,2" FontSize="14" Width="32" Height="24"
                                            Margin="2,0" Cursor="Hand" ToolTip="Giden Paketleri Engelle">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="12">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FF3E3E42"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUploadBlocked}" Value="True">
                                                        <Setter Property="Background" Value="#FFDC3545"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF555555"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type local:ProcessInfo}">
                            <Grid Width="630" Height="22">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="280"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="110"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding DisplayName}" Padding="30,2,4,2" FontSize="12" VerticalAlignment="Center" Foreground="#FFAAAAAA"/>
                                <TextBlock Grid.Column="1" Text="{Binding DownloadSpeed}" Padding="4,2" FontSize="12" VerticalAlignment="Center" Foreground="#FFAAAAAA"/>
                                <TextBlock Grid.Column="2" Text="{Binding UploadSpeed}" Padding="4,2" FontSize="12" VerticalAlignment="Center" Foreground="#FFAAAAAA"/>
                                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Button Content="{Binding DownloadBlockIcon}" 
                                            Click="BlockDownloadButton_Click" Tag="{Binding}"
                                            BorderThickness="1" BorderBrush="#FF555555"
                                            Padding="4,1" FontSize="11" Width="28" Height="18"
                                            Margin="2,0" Cursor="Hand" ToolTip="Gelen Paketleri Engelle">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="9">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FF3E3E42"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDownloadBlocked}" Value="True">
                                                        <Setter Property="Background" Value="#FFDC3545"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="{Binding UploadBlockIcon}" 
                                            Click="BlockUploadButton_Click" Tag="{Binding}"
                                            BorderThickness="1" BorderBrush="#FF555555"
                                            Padding="4,1" FontSize="11" Width="28" Height="18"
                                            Margin="2,0" Cursor="Hand" ToolTip="Giden Paketleri Engelle">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="9">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#FF3E3E42"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUploadBlocked}" Value="True">
                                                        <Setter Property="Background" Value="#FFDC3545"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </DockPanel>
        </Border>

        <!-- Sağ Bölüm -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Sağ Üst: Kurallar -->
            <GroupBox Grid.Row="0" Header="Kurallar" Foreground="White" Margin="5">
                <StackPanel>
                    <TextBlock Text="Engelleyici: Ayarlanmadı" Foreground="White" Margin="5"/>
                    <TextBlock Text="Sınırlayıcı: Ayarlanmadı" Foreground="White" Margin="5"/>
                    <TextBlock Text="Öncelik: Ayarlanmadı" Foreground="White" Margin="5"/>
                    <TextBlock Text="Kota: Ayarlanmadı" Foreground="White" Margin="5"/>
                    <Button Content="Kural Ekle" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Sağ Alt: Trafik Grafiği -->
            <GroupBox Grid.Row="1" Header="Trafik Grafiği" Foreground="White" Margin="5">
                <Canvas Name="TrafficGraphCanvas" Background="#FF1E1E1E" Margin="5" ClipToBounds="True"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
